# HealthWise AI - Environment Configuration
# Copy this file to .env.local for development or .env.production for production

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL (Required)
# Get this from your Supabase dashboard: Settings > API
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anonymous Key (Required)
# This is safe to use in client-side code - it respects RLS policies
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (Server-side only)
# DO NOT expose this in client-side code - it bypasses RLS
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZS1kZW1vIiwicm9sZSI6InNlcnZpY2Vfcm9sZSIsImV4cCI6MTk4MzgxMjk5Nn0.EGIM96RAZx35lJzdJsyH-qQwv8Hdp7fsn3W0YpN81IU
# =============================================================================
# SUPABASE EDGE FUNCTIONS
# =============================================================================

# AI Health Assistant Function URL
# Used for AI chat, symptom analysis, and prescription generation
NEXT_PUBLIC_SUPABASE_AI_FUNCTION_URL=https://your-project-ref.supabase.co/functions/v1/ai-health-assistant

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Secret (for token verification if needed)
SUPABASE_JWT_SECRET=your-jwt-secret

# Auth redirect URLs
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3000/auth/callback
NEXT_PUBLIC_AUTH_REDIRECT_URL_PRODUCTION=https://yourdomain.com/auth/callback

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (for server-side operations and migrations)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Database Direct URL (for Prisma/Drizzle if used alongside Supabase)
DIRECT_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# =============================================================================
# REALTIME CONFIGURATION
# =============================================================================

# Realtime WebSocket URL (usually auto-configured)
NEXT_PUBLIC_SUPABASE_REALTIME_URL=wss://your-project-ref.supabase.co/realtime/v1/websocket

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Supabase Storage bucket for health records attachments
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=health-documents

# Maximum file upload size (in bytes)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# Allowed file types for uploads
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/plain

# =============================================================================
# AI INTEGRATION
# =============================================================================

# OpenAI API Key (if using OpenAI for enhanced AI features)
OPENAI_API_KEY=your-openai-api-key

# AI Model Configuration
AI_MODEL_NAME=gpt-4
AI_MODEL_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# =============================================================================
# EXTERNAL APIs
# =============================================================================



# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================

# Email service configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Push notification service
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# NextAuth Secret (if using NextAuth alongside Supabase)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate limiting configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment type
NODE_ENV=development

# Debug mode
DEBUG=true
NEXT_PUBLIC_DEBUG=true

# Logging level
LOG_LEVEL=info

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Domain configuration for production
NEXT_PUBLIC_DOMAIN=yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Analytics (if using)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Error tracking (if using Sentry)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# =============================================================================
# HEALTHCARE COMPLIANCE
# =============================================================================

# HIPAA compliance settings
HIPAA_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555
BACKUP_RETENTION_DAYS=2555

# Data encryption settings
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# AI Features
NEXT_PUBLIC_ENABLE_AI_CHAT=true
NEXT_PUBLIC_ENABLE_SYMPTOM_CHECKER=true
NEXT_PUBLIC_ENABLE_PRESCRIPTION_AI=true

# Telehealth Features
NEXT_PUBLIC_ENABLE_TELEHEALTH=true
NEXT_PUBLIC_ENABLE_VIDEO_CALLS=true

# Additional Features
NEXT_PUBLIC_ENABLE_MEDICATION_REMINDERS=true
NEXT_PUBLIC_ENABLE_VITAL_SIGNS_TRACKING=true
NEXT_PUBLIC_ENABLE_EMERGENCY_FEATURES=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Database connection pooling
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30000

# Caching configuration
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# CDN configuration
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================

# Application monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-key
NEW_RELIC_APP_NAME=healthwise-ai

# Performance monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# User analytics
NEXT_PUBLIC_USER_ANALYTICS=true